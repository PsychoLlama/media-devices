{
  "name": "media-devices",
  "description": "Easily manage media devices in the browser.",
  "version": "0.4.0",
  "license": "MIT",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "repository": "github:PsychoLlama/media-devices",
  "homepage": "https://github.com/PsychoLlama/media-devices#readme",
  "module": "./dist/media-devices.es.js",
  "main": "./dist/media-devices.umd.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "require": "./dist/media-devices.umd.js",
      "import": "./dist/media-devices.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "camera",
    "microphone",
    "speakers",
    "devices",
    "mediadevices"
  ],
  "scripts": {
    "prepare": "vite build --sourcemap",
    "test": "./bin/run-tests",
    "test:unit": "jest --color",
    "test:lint": "eslint src --ext ts --color",
    "test:fmt": "prettier --check src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": [
      "eslint",
      "prettier --check"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/src/test-utils/index.ts"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "./**/__tests__/*.ts{x,}"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-use-before-define": "off"
    }
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "eslint": "8.34.0",
    "husky": "8.0.3",
    "jest": "29.4.2",
    "jest-environment-jsdom": "29.4.2",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5",
    "vite": "4.1.1"
  }
}
