{
  "name": "media-devices",
  "description": "Easily manage media devices in the browser.",
  "version": "0.2.0",
  "license": "MIT",
  "author": "Jesse Gibson <JesseTheGibson@gmail.com>",
  "repository": "github:PsychoLlama/media-devices",
  "homepage": "https://github.com/PsychoLlama/media-devices#readme",
  "module": "dist/media-devices.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "camera",
    "microphone",
    "speakers",
    "devices",
    "mediadevices"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint src"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/test-utils/index.ts"
    ]
  },
  "size-limit": [
    {
      "path": "dist/media-devices.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/media-devices.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "7.0.3",
    "husky": "7.0.4",
    "size-limit": "7.0.3",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typescript": "4.5.2"
  }
}
